rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if the requesting user is a superuser
    // Handles cases where role field might not exist (defaults to 'user')
    function isSuperUser() {
      return request.auth != null 
        && exists(/databases/$(database)/documents/users/$(request.auth.uid))
        && 'role' in get(/databases/$(database)/documents/users/$(request.auth.uid)).data
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superuser';
    }
    
    // Helper function to check if the requesting user is admin or superuser
    function isAdminOrSuperUser() {
      return request.auth != null 
        && exists(/databases/$(database)/documents/users/$(request.auth.uid))
        && 'role' in get(/databases/$(database)/documents/users/$(request.auth.uid)).data
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'superuser'];
    }
    
    // Users collection: users can only read/write their own profile
    match /users/{userId} {
      // Users can read their own profile, or admin/superuser can read any profile
      allow read: if request.auth != null && (
        request.auth.uid == userId || isAdminOrSuperUser()
      );
      
      // Users can create their own profile (on first sign-in)
      // Note: createdAt uses serverTimestamp() which is validated server-side
      // role is required and must be one of: 'superuser', 'admin', 'user'
      allow create: if request.auth != null 
        && request.auth.uid == userId
        && request.resource.data.keys().hasAll(['displayName', 'email', 'role', 'createdAt'])
        && request.resource.data.displayName is string
        && request.resource.data.displayName.size() > 0
        && request.resource.data.email is string
        && request.resource.data.email == request.auth.token.email
        && request.resource.data.role is string
        && request.resource.data.role in ['superuser', 'admin', 'user']
        && (!('phone' in request.resource.data) || request.resource.data.phone is string)
        && (!('avatarUrl' in request.resource.data) || request.resource.data.avatarUrl is string);
      
      // Users can update their own profile (displayName, phone, and sidebarState)
      // SuperUsers can also update role field (for any user)
      allow update: if request.auth != null && (
        // Case 1: Regular users updating their own displayName, phone, and/or sidebarState (no role changes)
        (request.auth.uid == userId
          && !('role' in request.resource.data.diff(resource.data).affectedKeys())
          && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['displayName', 'phone', 'sidebarState'])
          && (!('displayName' in request.resource.data.diff(resource.data).affectedKeys()) 
              || (request.resource.data.displayName is string && request.resource.data.displayName.size() > 0))
          && (!('phone' in request.resource.data.diff(resource.data).affectedKeys()) 
              || request.resource.data.phone is string)
          && (!('sidebarState' in request.resource.data.diff(resource.data).affectedKeys())
              || request.resource.data.sidebarState in ['expanded', 'collapsed', 'hover']))
        ||
        // Case 2: SuperUsers updating role field (for any user, including themselves)
        (isSuperUser()
          && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['role'])
          && request.resource.data.role in ['superuser', 'admin', 'user'])
        ||
        // Case 3: SuperUsers updating their own profile with displayName, phone, sidebarState, and/or role
        (isSuperUser()
          && request.auth.uid == userId
          && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['displayName', 'phone', 'sidebarState', 'role'])
          && (!('displayName' in request.resource.data.diff(resource.data).affectedKeys()) 
              || (request.resource.data.displayName is string && request.resource.data.displayName.size() > 0))
          && (!('phone' in request.resource.data.diff(resource.data).affectedKeys()) 
              || request.resource.data.phone is string)
          && (!('sidebarState' in request.resource.data.diff(resource.data).affectedKeys())
              || request.resource.data.sidebarState in ['expanded', 'collapsed', 'hover'])
          && (!('role' in request.resource.data.diff(resource.data).affectedKeys())
              || request.resource.data.role in ['superuser', 'admin', 'user']))
      );
    }
    
    // App settings collection: public read, admin/superuser write only
    match /appSettings/{settingsId} {
      // Everyone can read app settings (to check if bookings are enabled)
      allow read: if true;
      
      // Only admin/superuser can create or update settings
      allow create, update: if request.auth != null && isAdminOrSuperUser()
        && request.resource.data.keys().hasAll(['bookingsEnabled'])
        && request.resource.data.bookingsEnabled is bool
        && (!('bookingsDisabledMessage' in request.resource.data) 
            || request.resource.data.bookingsDisabledMessage is string);
    }
    
    // Announcements collection: public read, admin/superuser write only
    match /announcements/{announcementId} {
      // Everyone can read announcements
      allow read: if true;
      
      // Only admin/superuser can create or update announcements
      allow create, update: if request.auth != null && isAdminOrSuperUser()
        && request.resource.data.keys().hasAll(['enabled', 'title', 'body'])
        && request.resource.data.enabled is bool
        && request.resource.data.title is string
        && request.resource.data.body is string
        && (!('links' in request.resource.data) 
            || (request.resource.data.links is list
                && request.resource.data.links.size() <= 10));
    }
    
    // Bookings collection: public read, restricted write
    match /bookings/{bookingId} {
      // Everyone can read bookings (for the public schedule)
      allow read: if true;
      
      // Create: the authenticated user must match userId in the new document
      allow create: if request.auth != null
                    && request.resource.data.userId == request.auth.uid
                    && request.resource.data.keys().hasAll(['userId', 'startTime', 'endTime', 'status', 'createdAt'])
                    && request.resource.data.userId is string
                    && request.resource.data.startTime is timestamp
                    && request.resource.data.endTime is timestamp
                    && request.resource.data.status is string
                    && request.resource.data.status in ['booked', 'cancelled']
                    && (!('opponentUserId' in request.resource.data) || request.resource.data.opponentUserId is string);
      
      // Update: only involved players may change/cancel
      // Allow updating status, opponentUserId, startTime, and endTime
      allow update: if request.auth != null
                    && (
                      resource.data.userId == request.auth.uid ||
                      resource.data.opponentUserId == request.auth.uid
                    )
                    && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status', 'opponentUserId', 'startTime', 'endTime'])
                    && (!('status' in request.resource.data.diff(resource.data).affectedKeys())
                        || request.resource.data.status in ['booked', 'cancelled'])
                    && (!('opponentUserId' in request.resource.data.diff(resource.data).affectedKeys())
                        || request.resource.data.opponentUserId is string)
                    && (!('startTime' in request.resource.data.diff(resource.data).affectedKeys())
                        || request.resource.data.startTime is timestamp)
                    && (!('endTime' in request.resource.data.diff(resource.data).affectedKeys())
                        || request.resource.data.endTime is timestamp)
                    && request.resource.data.startTime is timestamp
                    && request.resource.data.endTime is timestamp
                    && request.resource.data.startTime < request.resource.data.endTime;
      
      // Delete: only involved players may delete
      allow delete: if request.auth != null
                    && (
                      resource.data.userId == request.auth.uid ||
                      resource.data.opponentUserId == request.auth.uid
                    );
    }
    
    // Default rule: deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
